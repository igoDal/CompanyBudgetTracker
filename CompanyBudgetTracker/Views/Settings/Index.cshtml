@model UserSettings

<h2>Settings</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="PreferredCurrency" class="control-label"></label>
        <input asp-for="PreferredCurrency" class="form-control" />
        <span asp-validation-for="PreferredCurrency" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FinancialYearStart" class="control-label"></label>
        <input asp-for="FinancialYearStart" class="form-control" type="date" />
        <span asp-validation-for="FinancialYearStart" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
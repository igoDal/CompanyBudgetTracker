@model UserSettings

@{
    ViewData["Title"] = "User Settings";
}

<h2>@ViewData["Title"]</h2>

<ul class="nav nav-tabs" id="settingsTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="personal-data-tab" data-bs-toggle="tab" href="#personal-data" role="tab" aria-controls="personal-data" aria-selected="false">Personal Data</a>
    </li>
</ul>
<div class="tab-content" id="settingsTabsContent">
    <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
        @await Html.PartialAsync("_GeneralSettings", Model)
    </div>
    <div class="tab-pane fade" id="personal-data" role="tabpanel" aria-labelledby="personal-data-tab">
        @await Html.PartialAsync("_PersonalData")
    </div>
</div>
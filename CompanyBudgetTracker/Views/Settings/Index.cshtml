@model UserSettings

@{
    ViewData["Title"] = "User Settings";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Your Settings</h3>
    <dl class="row">
        <dt class="col-sm-2">
            Notifications Enabled:
        </dt>
        <dd class="col-sm-10">
            @Model.EnableNotifications
        </dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Settings</a>
</div>
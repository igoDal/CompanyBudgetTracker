@using CompanyBudgetTracker.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AlertSetting

<h2>Alert Settings</h2>

<form asp-action="SaveAlertSettings" method="post">
    <div class="form-group">
        <label asp-for="ThresholdType" class="control-label">Threshold Type:</label>
        <select asp-for="ThresholdType" asp-items="Html.GetEnumSelectList<ThresholdType>()" class="form-control"></select>
    </div>
    
    <div class="form-group">
        <label asp-for="ThresholdAmount" class="control-label">Threshold Amount:</label>
        <input asp-for="ThresholdAmount" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group form-check">
        <input asp-for="NotifyByEmail" class="form-check-input" type="checkbox" />
        <label asp-for="NotifyByEmail" class="form-check-label">Notify by Email</label>
    </div>

    <div class="form-group form-check">
        <input asp-for="NotifyInApp" class="form-check-input" type="checkbox" />
        <label asp-for="NotifyInApp" class="form-check-label">Notify in Application</label>
    </div>

    <button type="submit" class="btn btn-primary">Save Settings</button>
</form>

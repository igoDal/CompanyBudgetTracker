@model UserSettings

<form asp-action="Edit" method="post">
    @* Existing fields *@

    <div class="form-group">
        <div class="form-check">
            <input asp-for="NotifyByEmail" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyByEmail" class="form-check-label">Notify by Email</label>
        </div>
        <div class="form-check">
            <input asp-for="NotifyBySMS" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyBySMS" class="form-check-label">Notify by SMS</label>
        </div>
        <div class="form-check">
            <input asp-for="NotifyInApp" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyInApp" class="form-check-label">Notify in Application</label>
        </div>
        <div class="form-check">
                <input asp-for="NotifyOnNewMessage" class="form-check-input" type="checkbox" />
                <label asp-for="NotifyOnNewMessage" class="form-check-label">Notify me on new messages</label>
        </div>
    
        <div class="form-check">
            <input asp-for="NotifyOnTaskCompletion" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyOnTaskCompletion" class="form-check-label">Notify me when tasks are completed</label>
        </div>
    
        <div class="form-check">
            <input asp-for="NotifyOnDueDateApproach" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyOnDueDateApproach" class="form-check-label">Notify me as due dates approach</label>
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@model UserSettings

@{
    ViewData["Title"] = "Edit User Settings";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditUserSettings" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="EnableNotifications" class="control-label">Enable Notifications:</label>
        <input asp-for="EnableNotifications" type="checkbox" class="form-check-input" />
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="NotifyByEmail" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyByEmail" class="form-check-label">Notify by Email</label>
        </div>
        <div class="form-check">
            <input asp-for="NotifyBySMS" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyBySMS" class="form-check-label">Notify by SMS</label>
        </div>
        <div class="form-check">
            <input asp-for="NotifyInApp" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyInApp" class="form-check-label">Notify in Application</label>
        </div>
        <div class="form-check">
            <input asp-for="NotifyOnNewMessage" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyOnNewMessage" class="form-check-label">Notify on New Messages</label>
        </div>
        <div class="form-check">
            <input asp-for="NotifyOnTaskCompletion" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyOnTaskCompletion" class="form-check-label">Notify on Task Completion</label>
        </div>
        <div class="form-check">
            <input asp-for="NotifyOnDueDateApproach" class="form-check-input" type="checkbox" />
            <label asp-for="NotifyOnDueDateApproach" class="form-check-label">Notify as Due Dates Approach</label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Language" class="control-label">Preferred Language:</label>
        <select asp-for="Language" class="form-control">
            <option value="en-US">English</option>
            <option value="es-ES">Spanish</option>
            <option value="fr-FR">French</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Theme" class="control-label">Theme:</label>
        <select asp-for="Theme" class="form-control">
            <option value="Light">Light</option>
            <option value="Dark">Dark</option>
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

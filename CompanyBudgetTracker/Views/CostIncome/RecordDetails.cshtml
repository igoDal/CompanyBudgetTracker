@model CompanyBudgetTracker.Models.CostIncomeModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Record Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>
    <div>
        <a href="@(Model.AttachmentName != null ? Url.Action("OpenAttachment", "CostIncome", new { attachmentId = Model.Id }) : "#")"
           class="btn btn-primary @(Model.AttachmentName != null ? "" : "disabled")"
           role="button"
           aria-disabled="@(Model.AttachmentName != null ? "false" : "true")">Download Attachment</a>
    </div>
    
    <a asp-action="GetHistory" class="btn btn-secondary">Back to List</a>
</div>
